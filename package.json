{
  "name": "nodejs-tunijobs-api-v1",
  "version": "1.0.0",
  "description": "Backend API for Resume & Cover Letter Analyzer (Node.js + Express + MongoDB + CASL)",
  "main": "src/core/server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/core/server.js",
    "start": "cross-env NODE_ENV=production node src/core/server.js",
    "test": "jest --runInBand",
    "lint": "eslint . --ext .js",
    "format": "prettier --write .",
    "check-types": "echo 'no typescript yet, skipping'",
    "prepare": "husky install"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "casl",
    "resume-parser",
    "ai"
