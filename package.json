  "author": "Taouai Baha Edine",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.10.0",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pdf-parse": "^1.1.1",
    "sanitize-html": "^2.17.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  }
